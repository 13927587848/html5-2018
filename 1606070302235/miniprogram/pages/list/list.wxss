.content{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-image: url("http://img17.3lian.com/d/file/201702/27/bdcbf830427e956b0e354773e09715a7.jpg");
  background-repeat: repeat;
  background-size: 100%;
}
.item{
  width: 90%;
  line-height: 100rpx;
  margin-top: 3rpx;
  margin-bottom: 3rpx;
  border-radius: 3px;
  padding-left: 3rpx;
  color: #fef4e9;
  border: solid 1px #da7c0c;
  background: #f78d1d;
}