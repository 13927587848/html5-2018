/* pages/index/index.wxss */
page {
  height: 100%;
  background-color: #d81e06;
}
.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 130rpx;
}

.userName {
  font-size: 42rpx;
  font-weight: bold;
  color: #ffffff;
  margin: 100rpx;
}

.entry {
  color: #ffffff;
  background-color: #0dd806;
}

.entry:active {
  color: #ffffff;
  background-color: #d81e06;
}