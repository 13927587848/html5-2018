<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <view class="weui-panel__bd" style="vertical-align:middle;">
      <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
        <block>
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image style="align:absmiddle;"  class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <text class="weui-media-box__title" style="color: black;height:auto;">{{userInfo.nickName}}</text>
          </view>
        </block>
      </view>
    </view>
  </view>
  <view class="weui-cells__title" >信息</view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="xinxi" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="ico-haoyou.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">联系信息</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
  <view class="weui-cells__title">关于</view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="about" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="ico-kefu.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">关于小程序</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>