<!--index.wxml-->
<form bindsubmit='formSubmit'>
  <view class="page">
  <view class="weui-cells__title"style='color:#000000; font-weight:bolder;'>联系方式</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <image src="ico-xingming.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入姓名" name="xming"id='xming'auto-focu value="{{xming}}"bindinput='blur1'/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <image src="ico-weixin.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__hd">
          <view class="weui-label">微信</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type='number'placeholder="请输入微信号" name="weixinnum"id='weixinnum'auto-focu value="{{weixinnum}}"bindinput='blur2'/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <image src="ico-qq.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__hd">
          <view class="weui-label">QQ</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input"type='number' placeholder="请输入QQ号" name="qqnum"id='qqnum'auto-focu value="{{qqnum}}"bindinput='blur3'/>
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <image src="ico-telnum.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入手机号" name="tel"id='tel'auto-focu value="{{tel}}"bindinput='blur4'type='number'/>
        </view>
      </view>
    </view>
    <view class="page__bd page__bd_spacing">
      <view class="button-sp-area">
        <button class="weui-btn" form-type="submit" bindtap="saveData"plain="true" style="color:#0000FF;border-color:#0000FF; " >保存</button>
      </view>
    </view>
  </view>
</form>
