<!-- index.wxml -->
<view>
  <view>
    
  </view>
  <view class="formtitle">制作文字表情包</view>
        <view class="canview">
        <canvas canvas-id='pngcan' class='can'></canvas>
        </view>
            <view class="weui-cells__title">输入</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea bindinput='textset' class="weui-textarea" placeholder="请输入文本" style="height: 3.3em" />
                    <!-- <view class="weui-textarea-counter">{{textlength}}/200</view> -->
                </view>
            </view>
        </view>
  <button class="weui-btn" type="primary" bindtap='create'>生成表情包图片</button>
  <button class="weui-btn" type="primary" bindtap='see'>点击预览</button>
  <view><text>注：预览后可保存到本地，并设置为微信表情包</text></view>
</view>