/* pages/navigator/navigator.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  background-color: #fcfcfc;
}

.in {
  color: #000000;
  width: 88%;
  margin: 50rpx 2.5%;
  padding: 3%;
  height: 1em;
  line-height: 1em;
  font-size: 1em;
  border: 1rpx solid #000000;
  border-radius: 0.8em;
}

.firstIn {
  margin-top: 5%;
}

.textIn {
  color: #000000;
  width: 88%;
  margin: 50rpx 2.5%;
  padding: 3%;
  height: 5em;
  font-size: 34rpx;
  border: 1rpx solid #000000f5;
  border-radius: 0.8em;
}

.tip {
  height: 1em;
  text-align: center;
  font-size: 34rpx;
}

.fButt {
  margin-top: 3%;
}

.butt {
  width: 95%;
  color: #ffffff;
  background-color: #3b3c42d3;
}
.butt:active {
   background-color: #2b2727f5;
}

.impTip {
  text-align: center;
  color: #000000;
  font-size: 28rpx;
}