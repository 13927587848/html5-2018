<!--pages/settings.wxml-->

<view class="distance weui-panel weui-panel_access">
  <view class="weui-panel__bd">
    <view class="weui-media-box weui-media-box_appmsg">
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
        <image class="weui-media-box__thumb" src="{{userInfo.avatarUrl}}"></image>
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title">{{userInfo.nickName}}</view>
      </view>
    </view>
  </view>
</view> 

<view class="weui-cells__title">帮助</view>
<view class="weui-cells weui-cells_after-title">
  <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active" url="/pages/help/help">
    <view class="weui-cell__hd">
      <image src="../../images/timelog.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;">
        </image>
    </view>
    <view class="weui-cell__bd">帮助文档</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
</view>

<view class="weui-cells__title">关于</view>
<view class="weui-cells weui-cells_after-title">
  <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active" url="/pages/help/help">
    <view class="weui-cell__hd">
      <image src="../../images/timelog.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;">
        </image>
    </view>
    <view class="weui-cell__bd">关于作者</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
</view>
<textarea  class='textIn' placeholder="这里可输入备注信息(100字以内)" maxlength="100"></textarea>
<button class="liuyan" bindtap='sendRequest'> 发送留言反馈 </button>