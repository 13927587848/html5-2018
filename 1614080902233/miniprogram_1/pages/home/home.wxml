<!--pages/home/home.wxml-->
<view class="page">
  <view class='page_bd'>
    <!--图片资料-->
    <view class='view_1'>
      <image class="img_1" src="{{time_1}}" />
      <text  style='padding-top:50rpx;'>光阴似箭，日月如梭</text>
    </view>

    <!--输入出生日期-->
    <view class='view_2'>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell__bd">
          <view class="weui-cell weui-cell_input riqi">
            <view class="weui-cell__hd" style='padding:20rpx 0;'>
              <view>点击填写出生日期</view>
            </view>
            <view class="weui-cell__bd">
              <picker mode="date" value="{{date}}" start="1942-01-01" end="2018-11-28" bindchange="bindDateChange">
                <view class="weui-input">{{date}}</view>
              </picker>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!--单选投票-->
    <view class='view_3'>
      <button class='btn_1' bindtap='text_1'>
        <text style='margin-top:10rpx;'>点击查看测试</text>
      </button>
    </view>
  </view>
</view>