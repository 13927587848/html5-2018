/**search**/
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width: 100%;
  height:75rpx;
  border-radius:10rpx;
  margin:15rpx 0;
}

/* 搜索框提示文字样式 */
.search input
{
  font-size:35rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  flex: 1;
}

/* 搜索框小图标 */
.search image
{ 
  width:45rpx;
  height:45rpx;
  margin:0 30rpx;
  align-items: center;
}



