page {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* align-items: center; */
  height: 100%;
}

.in {
  color: #7284f8;
  width: 88%;
  margin: 50rpx 2.5%;
  padding: 3%;
  height: 1.7em;
  line-height: 1.7em;
  font-size: 1em;
  border: 1rpx solid #A1ADFF;
  border-radius: 0.8em;
}

.firstIn {
  margin-top: 7%;
}

.textIn {
  color: #7284f8;
  width: 88%;
  margin: 50rpx 2.5%;
