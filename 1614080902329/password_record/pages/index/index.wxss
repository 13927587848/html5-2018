/* pages/index/index.wxss */
page {
  height: 100%;
  background-color: #A1ADFF;
}
.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 40% auto 0rpx;
}

.userName {
  font-size: 120%;
  font-weight: bold;
  color: #ffffff;
  margin: 10%;
}

.entry {
  width: 70%;
  border-radius: 2.5em;
  color: #ffffff;
  background-color: #b0bafd;
}

.entry:active {
  color: #ffffff;
  background-color: #919de7;
}