<!--pages/me/me.wxml-->
<view class="distance weui-panel weui-panel_access">
  <view class="weui-panel__bd">
    <view class="weui-media-box weui-media-box_appmsg">
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
        <image class="weui-media-box__thumb" src="{{userInfo.avatarUrl}}"></image>
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title">{{userInfo.nickName}}</view>
        <view class="weui-media-box__desc">性别：{{userInfo.gender?"男":"女"}}</view>
      </view>
    </view>
  </view>
</view>

<view class="weui-cells__title">个人</view>
<view class="weui-cells weui-cells_after-title">
  <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active" url="">
    <view class="weui-cell__hd">
      <image src="../../images/setting.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;">
        </image>
    </view>
    <view class="weui-cell__bd">设置</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
  <navigator class="weui-cell weui-cell_access" hover-class="weui-cell_active" url="">
    <view class="weui-cell__hd">
      <image src="../../images/share.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;">
        </image>
    </view>
    <view class="weui-cell__bd">分享小程序</view>
    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
  </navigator>
</view>

