/* pages/my/my.wxss */
.header {
	width: 100%;
	height: 280rpx;
	background-color: #ffffff;
	padding-left: 275rpx;
}
.userInfo {
	width: 200rpx;
	height: 280rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.userinfo-avatar {
	width: 140rpx;
	height: 140rpx;
	border: 1px solid #fff;
	border-radius: 70rpx;
	box-shadow: 2rpx 2rpx 2rpx #625c52;
	/*text-align: center;*/
}

.userinfo-nickname {
	font-size: 11pt;
	color: #353535;
	font-weight: bold;
	padding-top: 20rpx;
	/*text-align: center;*/
}

.line {
	height: 15rpx;
	width: 100%;
	background-color: #f2f2f2;
}
.category-title {
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
}

.category-title .name {
  font-size: 44rpx;
  font-weight: 500;
}

.category-title .icon image {
  width: 65rpx;
  height: 65rpx;
  margin-right: 30rpx;
}
