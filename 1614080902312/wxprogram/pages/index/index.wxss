/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.flex-item{
  width: 100rpx;
  height: 100rpx;
}
.bc_green{
  background-color:green;
  color: white;
}
.bc_red{
  background-color:red;
  color: white;
}
.bc_blue{
  background-color:blue;
  color: white;
}
.img-container {
  margin-top: 0;
  border: 2px solid darkorchid;
  width: 250rpx;
  height: 250rpx;
  border-radius: 5px;
}
.bdp{
  margin-top: 0;
  width: 100%;
  height: 450rpx;
  border: 2px solid darkorchid;
}

.image-icon{
  display: flex;
  justify-content: center;        
  align-items:center;
}
.grids {
  border-top: 1px solid #D9D9D9;
  overflow: hidden;
  width: 100%;
  height: 530rpx;
  margin-top:20px; 
}
.grid{
  position: relative;
  float: left;
  width: 33.33333333%;
  height: 265rpx;
  padding-top: 25px;
  padding-left: 28px;
  padding-right: 28px;
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;   
  justify-content: center; 
}