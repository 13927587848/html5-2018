    <script>
        function changeColor(_corlor) {
            document.body.style.background = _corlor;
        }
        function check() {
            var msgObj = document.getElementById("text-message");
            if (msgObj.value == "") {
                alert("留言框为空，请填写留言");
                return false;
            } else {
                _submit();
                return true;
            }
        }
        function _submit() {
            // 执行相关提交表单或者Ajax的操作
            alert("恭喜你，留言成功");
        }
