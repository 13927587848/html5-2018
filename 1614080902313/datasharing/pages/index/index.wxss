
page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.weui-cells {
    position: relative;
    margin-top: unit(20 / 17px, em);
    background-color: #FFFFFF;
    line-height: unit((44px - 2 * 10px) / 17px);
    font-size: 17px; 
}

.weui-cells__title {
    margin-top: .77em; 
    margin-bottom: .3em;
    padding-left: 15px;
    padding-right:15px;
    color: #000000;
    font-size:17px;
}
.weui-cells_after-title{
    margin-bottom: 30px;
}

.weui-cells__tips {
    margin-top: .3em; 
    color:#999999;
    padding-left: 15px;
    padding-right: 15px;
    font-size: 17px;
}

.weui-cell {
    padding: 10px 15px;
    position: relative;
    display: flex;
    align-items: center;
    
   
}
.weui-cell_active {
    background-color:#FFFFFF;
}
.weui-cell_primary{
    align-items: flex-start;
}
.weui-cell__bd{
    flex: 1;
}
.weui-cell__ft {
    /* text-align: right; */
    color: #999999;
    padding-left: 25px; 
}