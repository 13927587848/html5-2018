.all {
    width: 100%;
    height: 900px;
    background: hsla(197, 58%, 70%, 0.363);
    background-size: 100% 100%;
}


.images {
  display: flex;
  justify-content: center;
  margin-bottom: -60rpx;
}
.images image {
  width:400rpx;
  height:400rpx;



}

#bt1 {
  display: flex;
  margin-bottom: 25rpx;
  width: 20%;
  flex-direction: column;
  align-items: center;
  margin-left: 1%;

  padding: 10rpx;
  background-color: #2e5168;
  border-radius: 10rpx;
  color: white;

  font-size: 30rpx;
}


#content1 {
  width: 80%;
  margin-left: 8%;
  margin-bottom: 150rpx;

  font-size: 35rpx;

  background-color: hsl(204, 44%, 49%);
