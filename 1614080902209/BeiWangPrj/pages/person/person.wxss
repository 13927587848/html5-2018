  font-size: 25rpx;

  background-color: hsl(204, 44%, 49%);
  border-radius: 50rpx;
  color: white;

  margin: center;
  
  display: flex;
  flex-direction: column;
  align-items: center;
 
  box-shadow:0px 0px 5px 5px #7575755d;
  margin-bottom: 200rpx;
}

#name {
  font-size: 30rpx;
  font-weight:bold;
}

