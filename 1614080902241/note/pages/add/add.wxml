<!--pages/add/add.wxml-->
 <view class="doc">
   <view class="doc1">
     <textarea class="file" placeholder="记事" bindinput="add" value="{{content}}" maxlength="-1"></textarea>
   </view>
   <view class="doc2">
      <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
         disabled="{{false}}" bindtap="submit" class="submit"> 确定 </button>
    <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}"
         disabled="{{false}}" bindtap="cancel" class="cancel"> 取消 </button>
   </view>
 </view> 