/* pages/post/create.wxss */
page {
    background: white;
}

textarea {
    font-size: 32rpx;
    padding: 40rpx 30rpx;
    width: 100%;
    box-sizing: border-box;
}

.photo-list {
    margin: 0 20rpx;
}

.photo-list .photo-block {
    display: inline-block;
    position: relative;
    margin-bottom: 20rpx;
    margin-right: 30rpx;
}

.photo-list .photo-block .del-btn {
    display: block;
    position: absolute;
    right: -20rpx;
    top: -20rpx;
    font-weight: bolder;
    color: white;
    font-size: 32rpx;
    border-radius: 50%;
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: red;
    text-align: center;
}

.photo {
    display: inline-block;
    color: #dbdbdb;
    border: 2rpx solid #ddd;
    font-weight: 300;
    width: 140rpx;
    height: 140rpx;
    font-size: 250rpx;
    position: relative;
}

#upload-img-btn image {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -40rpx;
    margin-top: -40rpx;
}

#is-anoymous {
    margin:0 20rpx;
    display: flex;
}

#is-anoymous label{
    color: #666;
    font-size: 32rpx;
    flex: 1;
    line-height: 70rpx;
}

button {
    margin: 30rpx 20rpx;
    background: transparent;
    color: #adadad;
    border: 1rpx solid #c6c6c6;
}