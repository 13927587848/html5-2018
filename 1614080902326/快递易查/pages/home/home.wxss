.item-view {
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  border-top-left-radius: 15px;
  border-bottom-left-radius: 15px;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  transform: translateX(100px);
  margin-left: -90px;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.item-title {
  font-size: 14px;
}

.emptyTips {
  font-size: 18px;
  color: #777;
  margin-top: 100rpx;
  text-align: center;
  height: 300rpx;
  line-height: 300rpx;
}

.del {
  background-color: #fe3b30;
  width: 100px;
  height: 80px;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(100px);
  transform: translateX(100px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .item-view, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}